<p id="notice"><%= notice %></p>

<h1>Companies</h1>
<%= form_tag companies_path, :method => 'get' do %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search"%>
<% end %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Authorization</th>
      <th>Second</th>
      <th>Other</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Rack</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.Name %></td>
        <td><%= company.Authorization %></td>
        <td><%= company.Second %></td>
        <td><%= company.Other %></td>
        <td><%= company.Phone %></td>
        <td><%= company.Email %></td>
        <td><%= company.Rack %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

